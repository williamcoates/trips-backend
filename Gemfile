source 'https://rubygems.org'
ruby '2.2.3'

# Rails + core libs
gem 'rails', '4.2.4'
gem 'pg'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'

# Application specific gems
gem 'devise'
gem 'rack-cors', :require => 'rack/cors'
gem 'config'
gem 'date_validator'
gem 'puma'

group :development, :test do
  gem 'byebug'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'faker'
end

group :production do
  gem 'rails_12factor'
end
